<Window x:Class="Agt.Desktop.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGT – Workspace" Height="520" Width="760" WindowStartupLocation="CenterScreen">
  <Grid Background="#FFF9FAFB">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Orientation="Vertical" Margin="24,20,24,12">
      <TextBlock Text="AGT Workspace" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,4"/>
      <TextBlock Text="Vyber akci:" FontSize="13" Foreground="#666"/>
    </StackPanel>

    <!-- Content -->
    <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="24" HorizontalAlignment="Stretch" VerticalAlignment="Top">
      <Button Padding="18,14" Margin="8" Click="OpenBlocksEditor">
        <StackPanel>
          <TextBlock Text="Bloky – editor" FontSize="16" FontWeight="SemiBold"/>
          <TextBlock Text="Paleta, plátno, layout" FontSize="12" Foreground="#666"/>
        </StackPanel>
      </Button>

      <Button Padding="18,14" Margin="8" Click="OpenProcessEditor">
        <StackPanel>
          <TextBlock Text="Proces – editor" FontSize="16" FontWeight="SemiBold"/>
          <TextBlock Text="Stadia, spojnice (stub)" FontSize="12" Foreground="#666"/>
        </StackPanel>
      </Button>

      <Button Padding="18,14" Margin="8" Click="RunCaseDemo">
        <StackPanel>
          <TextBlock Text="Spustit ukázkový Case" FontSize="16" FontWeight="SemiBold"/>
          <TextBlock Text="Demo runtime + uložení" FontSize="12" Foreground="#666"/>
        </StackPanel>
      </Button>

      <Button Padding="18,14" Margin="8" Click="OpenBlocksFolder">
        <StackPanel>
          <TextBlock Text="Otevřít knihovnu bloků" FontSize="16" FontWeight="SemiBold"/>
          <TextBlock Text="%AppData%/AGT/blocks" FontSize="12" Foreground="#666"/>
        </StackPanel>
      </Button>
    </UniformGrid>

    <!-- Footer -->
    <DockPanel Grid.Row="2" Margin="16,8" LastChildFill="False">
      <TextBlock Text="Phase B · sjednocená navigace" Foreground="#888" VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
        <Button Content="Zavřít" Padding="10,6" Margin="8,0,0,0" Click="OnClose"/>
      </StackPanel>
    </DockPanel>
  </Grid>
</Window>
