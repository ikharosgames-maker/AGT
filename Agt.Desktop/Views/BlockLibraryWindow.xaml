<Window x:Class="Agt.Desktop.Views.BlockLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor bloků" Width="700" Height="500"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Nový blok" Click="NewBlock_Click"/>
            <Button Content="Odstranit" Click="DeleteBlock_Click" Margin="8,0,0,0"/>
            <Separator/>
            <Button Content="Zavřít" Click="Close_Click"/>
        </ToolBar>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="BlocksList" DisplayMemberPath="Title"/>

            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                <TextBlock Text="Detail bloku" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="Název:" Width="80"/>
                    <TextBox x:Name="TitleBox"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="Verze:" Width="80"/>
                    <TextBox x:Name="VersionBox"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="ID:" Width="80"/>
                    <TextBox x:Name="IdBox" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Uložit" Width="100" Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
