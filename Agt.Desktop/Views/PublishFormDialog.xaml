<Window x:Class="Agt.Desktop.Views.PublishFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publikovat formulář"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Název formuláře" Grid.Row="0" Grid.Column="0" Margin="0,0,8,8"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Form key" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8"/>
        <TextBox x:Name="KeyBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" ToolTip="Stabilní identifikátor (např. QC_Input)"/>

        <TextBlock Text="Verze (SemVer)" Grid.Row="2" Grid.Column="0" Margin="0,0,8,8"/>
        <TextBox x:Name="VersionBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" Text="1.0.0"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="0,12,8,0" Content="Publikovat" IsDefault="True" Click="Ok_Click"/>
            <Button Width="90" Margin="0,12,0,0" Content="Zrušit" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
