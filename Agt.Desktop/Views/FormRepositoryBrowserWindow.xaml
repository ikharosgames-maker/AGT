<Window x:Class="Agt.Desktop.Views.FormRepositoryBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Otevřít z repozitáře" Height="520" Width="800"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <TextBlock Text="Hledat:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="240" Margin="0,0,8,0" Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Obnovit" Width="90" Margin="0,0,8,0" Command="{Binding RefreshCommand}"/>
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}" Name="List"
                      Grid.Row="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Klíč" Width="180" DisplayMemberBinding="{Binding Key}"/>
                        <GridViewColumn Header="Verze" Width="120" DisplayMemberBinding="{Binding Version}"/>
                        <GridViewColumn Header="Název souboru" Width="260" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Upraveno (UTC)" Width="160" DisplayMemberBinding="{Binding ModifiedUtc}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Otevřít" Width="100" Margin="0,0,8,0" IsDefault="True" Command="{Binding OpenCommand}"/>
                <Button Content="Zrušit" Width="100" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
