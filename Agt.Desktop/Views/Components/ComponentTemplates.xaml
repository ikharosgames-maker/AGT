<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="AppFgBrush" Color="#222222"/>
  <SolidColorBrush x:Key="AppBgBrush" Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="AppAccentBrush" Color="#FF3A7AFE"/>
  <SolidColorBrush x:Key="AppBorderBrush" Color="#22000000"/>

  <Style x:Key="LabelBase" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource AppFgBrush}"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Margin" Value="0,0,0,4"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <Style x:Key="InputBase" TargetType="Control">
    <Setter Property="Foreground" Value="{StaticResource AppFgBrush}"/>
    <Setter Property="Background" Value="White"/>
    <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,4"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style x:Key="TextBoxInput" TargetType="TextBox" BasedOn="{StaticResource InputBase}">
    <Setter Property="MinWidth" Value="160"/>
  </Style>

  <Style x:Key="ComboInput" TargetType="ComboBox" BasedOn="{StaticResource InputBase}">
    <Setter Property="MinWidth" Value="160"/>
  </Style>

  <Style x:Key="CheckInput" TargetType="CheckBox">
    <Setter Property="Foreground" Value="{StaticResource AppFgBrush}"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Margin" Value="2,0,0,0"/>
  </Style>

  <Style x:Key="DateInput" TargetType="DatePicker" BasedOn="{StaticResource InputBase}">
    <Setter Property="MinWidth" Value="160"/>
  </Style>

  <Style x:Key="FieldContainer" TargetType="Grid">
    <Setter Property="Margin" Value="0,0,0,8"/>
  </Style>

</ResourceDictionary>
