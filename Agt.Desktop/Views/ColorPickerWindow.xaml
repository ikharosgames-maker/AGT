<Window x:Class="Agt.Desktop.Views.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Výběr barvy" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="{DynamicResource FieldBackgroundBrush}" Foreground="{DynamicResource ControlTextBrush}">
    <Border Padding="12" BorderBrush="#444" BorderThickness="1">
        <StackPanel Width="320" >
            <!-- Náhled -->
            <Border Height="60" Margin="0,0,0,10" BorderBrush="#666" BorderThickness="1" CornerRadius="6">
                <Grid>
                    <Rectangle Fill="{Binding PreviewBrush}" />
                    <TextBlock Text="{Binding Hex}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </Grid>
            </Border>

            <!-- ARGB -->
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="56"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="A" Grid.Row="0" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding A, Mode=TwoWay}"/>
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding A, Mode=TwoWay}" Margin="6,0,0,0"/>

                <TextBlock Text="R" Grid.Row="1" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding R, Mode=TwoWay}"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding R, Mode=TwoWay}" Margin="6,0,0,0"/>

                <TextBlock Text="G" Grid.Row="2" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <Slider Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding G, Mode=TwoWay}"/>
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding G, Mode=TwoWay}" Margin="6,0,0,0"/>

                <TextBlock Text="B" Grid.Row="3" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <Slider Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding B, Mode=TwoWay}"/>
                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding B, Mode=TwoWay}" Margin="6,0,0,0"/>
            </Grid>

            <!-- HEX -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="HEX" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Text="{Binding Hex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <Button Content="Použít" Margin="8,0,0,0" Click="ApplyHex_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
                <Button Content="Zrušit" Width="80" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
