<Window x:Class="Agt.Desktop.Views.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barva (HSL)" Width="360" Height="320"
        WindowStartupLocation="CenterOwner"
        Background="#222" Foreground="#EEE" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="HSL Color Picker" FontWeight="Bold" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Margin="0,4,0,8">
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Hue" Width="70"/>
                <Slider x:Name="HueSlider" Minimum="0" Maximum="360" ValueChanged="HueSlider_ValueChanged" Width="200"/>
                <TextBox x:Name="HueBox" Width="60" Margin="8,0,0,0" TextChanged="HueBox_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Saturation" Width="70"/>
                <Slider x:Name="SatSlider" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" ValueChanged="SatSlider_ValueChanged" Width="200"/>
                <TextBox x:Name="SatBox" Width="60" Margin="8,0,0,0" TextChanged="SatBox_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Lightness" Width="70"/>
                <Slider x:Name="LitSlider" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" ValueChanged="LitSlider_ValueChanged" Width="200"/>
                <TextBox x:Name="LitBox" Width="60" Margin="8,0,0,0" TextChanged="LitBox_TextChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <Border x:Name="Preview" Width="60" Height="32" BorderBrush="#555" BorderThickness="1"/>
                <TextBox x:Name="HexBox" Width="120" Margin="12,0,0,0" />
                <Button Content="Kopírovat" Width="90" Margin="8,0,0,0" Click="CopyHex_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Zrušit" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
