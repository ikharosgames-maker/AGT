<UserControl x:Class="Agt.Desktop.Views.FloatingCommandBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#2A2A2A" CornerRadius="8" Padding="6" BorderBrush="#444" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
            <Button Content="Seskupit" Margin="2" Command="{Binding GroupCommand}"/>
            <Button Content="Zarovnat L" Margin="2" Command="{Binding AlignLeftCommand}"/>
            <Separator Width="10"/>
            <Button Content="Duplikovat" Margin="2" Command="{Binding DuplicateCommand}"/>
            <Button Content="▲" Margin="2" Command="{Binding BringToFrontCommand}"/>
            <Button Content="▼" Margin="2" Command="{Binding SendToBackCommand}"/>
            <Separator Width="10"/>
            <Button Content="Smazat" Margin="2" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
