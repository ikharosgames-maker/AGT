<Window x:Class="Agt.Desktop.Views.BlocksEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Agt.Desktop.Views"
        xmlns:mdl="clr-namespace:Agt.Desktop.Models"
        Title="AGT – Návrhář formulářů"
        Width="1280" Height="860"
        Background="{DynamicResource EditorWindowBackgroundBrush}"
        Foreground="{DynamicResource EditorTextBrush}"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <!-- Jedno místo pravdy pro šablony + vynucení DESIGN módu pro všechny ItemsControl v editoru -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Pokud je ComponentTemplates.xaml ve stejném assembly a cestě, funguje tato URI.
                     V případě jiné cesty uprav:
                     pack://application:,,,/Agt.Desktop;component/Views/Components/ComponentTemplates.xaml -->
                <ResourceDictionary Source="/Agt.Desktop;component/Views/Components/ComponentTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Všude v tomto okně renderujeme v DESIGN módu (šablony na to mají triggery) -->
            <Style TargetType="{x:Type ItemsControl}">
                <Setter Property="views:RenderModeHelper.Mode" Value="{x:Static mdl:RenderMode.Edit}"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Klávesové zkratky – přímo na commandy z DesignerViewModel -->
    <Window.InputBindings>
        <!-- Delete = smazat vybrané komponenty -->
        <KeyBinding Key="Delete"
                    Command="{Binding DeleteCommand}"/>
        <!-- Ctrl+D = duplikovat vybrané komponenty -->
        <KeyBinding Key="D"
                    Modifiers="Control"
                    Command="{Binding DuplicateCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- menu -->
            <RowDefinition Height="36"/>
            <!-- info bar -->
            <RowDefinition Height="*"/>
            <!-- obsah -->
            <RowDefinition Height="28"/>
            <!-- status bar -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0"
              Background="{DynamicResource EditorSurfaceAltBrush}"
              Foreground="{DynamicResource EditorTextBrush}"
              FontSize="13">

            <MenuItem Header="_Soubor">
                <MenuItem Header="_Nový blok…" Click="NewBlock_OnClick"/>
                <MenuItem Header="_Otevřít…" Click="LoadJson_OnClick"/>
                <MenuItem Header="_Uložit…" Click="SaveJson_OnClick"/>
                <MenuItem Header="_Klonovat jako nový blok…" Click="CloneBlock_OnClick"/>
                <Separator/>
                <MenuItem Header="_Konec" Click="Exit_OnClick"/>
            </MenuItem>

            <MenuItem Header="_Úpravy">
                <!-- napojeno na existující commandy ve DesignerViewModel -->
                <MenuItem Header="_Smazat"
                          Command="{Binding DeleteCommand}"
                          InputGestureText="Del"/>
                <MenuItem Header="_Duplikovat"
                          Command="{Binding DuplicateCommand}"
                          InputGestureText="Ctrl+D"/>
                <Separator/>
                <MenuItem Header="Do_předu"
                          Command="{Binding BringToFrontCommand}"/>
                <MenuItem Header="Do_zadu"
                          Command="{Binding SendToBackCommand}"/>
                <Separator/>
                <MenuItem Header="Zarovnat v_levo"
                          Command="{Binding AlignLeftCommand}"/>
            </MenuItem>

            <MenuItem Header="_Zobrazení">
                <MenuItem Header="Mřížka −" Click="GridMinus_OnClick"/>
                <MenuItem Header="Mřížka +" Click="GridPlus_OnClick"/>
                <Separator/>
                <MenuItem Header="Velikost mřížky:">
                    <MenuItem.HeaderTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="Velikost mřížky:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GridSize}" FontWeight="Bold" VerticalAlignment="Center"/>
                            </DockPanel>
                        </DataTemplate>
                    </MenuItem.HeaderTemplate>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Layout">
                <MenuItem Header="_Auto layout" Click="AutoLayout_OnClick"/>
            </MenuItem>
        </Menu>

        <!-- Info bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource EditorSurfaceBrush}"
                BorderBrush="{DynamicResource EditorBorderBrush}"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Margin="10,0"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{Binding CurrentBlockTitle}"/>
            </DockPanel>
        </Border>

        <!-- Obsah -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Levý panel: knihovna + seznam komponent v tabech -->
                <ColumnDefinition Width="Auto"/>
                <!-- Canvas -->
                <ColumnDefinition Width="*"/>
                <!-- Pravý panel: vlastnosti -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Levý panel: ComponentLibrary + ComponentsList v záložkách -->
            <Border Grid.Column="0"
                    Width="260"
                    BorderBrush="{DynamicResource EditorBorderBrush}"
                    BorderThickness="0,0,1,0"
                    Background="{DynamicResource EditorPanelBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <!-- pokud není vybraný / načtený blok, panel se schová -->
                            <DataTrigger
                                Binding="{Binding CurrentBlock}"
                                Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TabControl>
                    <TabItem Header="Knihovna prvků">
                        <views:ComponentLibraryView/>
                    </TabItem>
                    <TabItem Header="Seznam prvků">
                        <views:ComponentsListView/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Canvas uprostřed -->
            <Border Grid.Column="1"
                    Background="{DynamicResource EditorCanvasBrush}"
                    BorderBrush="{DynamicResource EditorBorderBrush}"
                    BorderThickness="1">
                <!-- Pokud chceš mřížku z Theme.xaml, přepni na EditorGridBrush -->
                <views:DesignerCanvas/>
            </Border>

            <!-- Pravý panel: Properties -->
            <Border Grid.Column="2"
                    Width="320"
                    BorderBrush="{DynamicResource EditorBorderBrush}"
                    BorderThickness="1,0,0,0"
                    Background="{DynamicResource EditorPanelBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <!-- pokud není vybraný / načtený blok, panel se schová -->
                            <DataTrigger
                                Binding="{Binding CurrentBlock}"
                                Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <views:PropertiesPanel/>
            </Border>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource EditorSurfaceBrush}"
                BorderBrush="{DynamicResource EditorBorderBrush}"
                BorderThickness="0,1,0,0">
            <DockPanel>
                <TextBlock Margin="8,0"
                           VerticalAlignment="Center"
                           FontSize="12">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <!-- defaultně zobrazuj StatusText -->
                            <Setter Property="Text" Value="{Binding StatusText}" />
                            <Style.Triggers>
                                <!-- pokud není blok, zobraz hint -->
                                <DataTrigger Binding="{Binding CurrentBlock}" Value="{x:Null}">
                                    <Setter Property="Text" Value="Nejprve vytvořte nebo načtěte blok." />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </DockPanel>
        </Border>
    </Grid>
</Window>
