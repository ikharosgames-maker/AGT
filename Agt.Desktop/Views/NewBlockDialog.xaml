<Window x:Class="Agt.Desktop.Views.NewBlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nový blok" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="#EEE" ResizeMode="NoResize">
    <Grid Margin="16" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="IdBox" Grid.Row="0" Grid.Column="1" Margin="6,2" IsReadOnly="True"/>

        <TextBlock Text="Název:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="6,2"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="6,0,0,0" IsDefault="True" Click="Ok_OnClick"/>
            <Button Content="Zrušit" Width="80" Margin="6,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
