        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGT Shell" Height="480" Width="720" WindowStartupLocation="CenterScreen">
  <Grid>
    <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock Text="AGT – Phase A (Case runtime + DI + Templates)"
                 FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,16"/>
      <Button Content="Spustit ukázkový Case"
              Padding="16,10"
              Click="OnRunCase"/>
    </StackPanel>
  </Grid>
</Window>
