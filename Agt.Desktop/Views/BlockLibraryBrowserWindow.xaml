<Window x:Class="Agt.Desktop.Views.BlockLibraryBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Knihovna bloků"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource AppTextBrush}">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Filtr:"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="FilterBox"
                     Width="220"
                     Margin="4,0,0,0"/>
            <Button Content="Obnovit"
                    Margin="8,0,0,0"
                    Click="Refresh_OnClick"/>
        </StackPanel>

        <DataGrid x:Name="BlocksGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          MouseDoubleClick="BlocksGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Klíč" Binding="{Binding Key}" Width="150"/>
                <DataGridTextColumn Header="Verze" Binding="{Binding Version}" Width="90"/>
                <DataGridTextColumn Header="ID" Binding="{Binding BlockId}" Width="220"/>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="Ok_OnClick"/>
            <Button Content="Storno"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </DockPanel>
</Window>
