<Window x:Class="Agt.Desktop.Views.CaseRunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Běh případu"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hlavička -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <TextBlock x:Name="HeaderTitle" FontSize="16" FontWeight="Bold"
                 Foreground="{DynamicResource AppTextBrush}" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" >
                <TextBlock Text="Legenda:" Margin="12,0,6,0" VerticalAlignment="Center"/>
                <Border Width="16" Height="16" Background="{DynamicResource AppPanelAltBrush}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" Margin="0,0,4,0"/>
                <TextBlock Text="Čeká" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <Border Width="16" Height="16" Background="{DynamicResource AppPanelBrush}" BorderBrush="{DynamicResource AppAccentBrush}" BorderThickness="2" Margin="0,0,4,0"/>
                <TextBlock Text="Aktivní" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <Border Width="16" Height="16" Background="{DynamicResource AppPanelDarkBrush}" Opacity="0.7" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" Margin="0,0,4,0"/>
                <TextBlock Text="Hotovo" VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- Canvas s layoutem -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{DynamicResource AppBackgroundBrush}">
                <Canvas x:Name="StageCanvas" Background="{DynamicResource EditorGridBrush}" Width="1600" Height="1000"/>
            </ScrollViewer>
        </Border>

        <!-- Ovládací lišta -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Dokončit vybrané" Margin="0,0,8,0" Click="CompleteSelected_Click"/>
            <Button Content="Zrušit výběr" Margin="0,0,8,0" Click="ClearSelection_Click"/>
            <Button Content="Zavřít" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
