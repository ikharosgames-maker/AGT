<UserControl x:Class="Agt.Desktop.Views.AnchorDockEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="clr-namespace:Agt.Desktop.Models"
             MinWidth="180" MinHeight="120">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Anchor" FontWeight="SemiBold"/>

        <Border Grid.Row="2" BorderBrush="#666" BorderThickness="1" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="BtnTop"    Grid.Row="0" Grid.Column="1" Content="Top"    Margin="2" Click="AnchorBtn_Click"/>
                <ToggleButton x:Name="BtnLeft"   Grid.Row="1" Grid.Column="0" Content="Left"   Margin="2" Click="AnchorBtn_Click"/>
                <Border Grid.Row="1" Grid.Column="1" Background="#222" CornerRadius="2" Margin="2">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#DDD" Text="control"/>
                </Border>
                <ToggleButton x:Name="BtnRight"  Grid.Row="1" Grid.Column="2" Content="Right"  Margin="2" Click="AnchorBtn_Click"/>
                <ToggleButton x:Name="BtnBottom" Grid.Row="2" Grid.Column="1" Content="Bottom" Margin="2" Click="AnchorBtn_Click"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="4" Text="Dock" FontWeight="SemiBold" Margin="0,0,0,6"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="48,0,0,0">
            <RadioButton GroupName="Dock" Content="None"   Tag="{x:Static m:DockTo.None}"   Checked="Dock_Checked" Margin="0,0,8,0"/>
            <RadioButton GroupName="Dock" Content="Left"   Tag="{x:Static m:DockTo.Left}"   Checked="Dock_Checked" Margin="0,0,8,0"/>
            <RadioButton GroupName="Dock" Content="Top"    Tag="{x:Static m:DockTo.Top}"    Checked="Dock_Checked" Margin="0,0,8,0"/>
            <RadioButton GroupName="Dock" Content="Right"  Tag="{x:Static m:DockTo.Right}"  Checked="Dock_Checked" Margin="0,0,8,0"/>
            <RadioButton GroupName="Dock" Content="Bottom" Tag="{x:Static m:DockTo.Bottom}" Checked="Dock_Checked" Margin="0,0,8,0"/>
            <RadioButton GroupName="Dock" Content="Fill"   Tag="{x:Static m:DockTo.Fill}"   Checked="Dock_Checked"/>
        </StackPanel>
    </Grid>
</UserControl>
