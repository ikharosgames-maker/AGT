<UserControl x:Class="Agt.Desktop.Views.AnchorDockEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="clr-namespace:Agt.Desktop.Models"
             MinWidth="220" MinHeight="160">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ANCHOR (ponecháno) -->
        <TextBlock Text="Anchor" FontWeight="SemiBold"/>
        <Border Grid.Row="2" BorderBrush="#666" BorderThickness="1" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="BtnTop"    Grid.Row="0" Grid.Column="1" Content="Top"    Margin="2" Click="AnchorBtn_Click"/>
                <ToggleButton x:Name="BtnLeft"   Grid.Row="1" Grid.Column="0" Content="Left"   Margin="2" Click="AnchorBtn_Click"/>
                <Border Grid.Row="1" Grid.Column="1" Background="#222" CornerRadius="2" Margin="2">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#DDD" Text="control"/>
                </Border>
                <ToggleButton x:Name="BtnRight"  Grid.Row="1" Grid.Column="2" Content="Right"  Margin="2" Click="AnchorBtn_Click"/>
                <ToggleButton x:Name="BtnBottom" Grid.Row="2" Grid.Column="1" Content="Bottom" Margin="2" Click="AnchorBtn_Click"/>
            </Grid>
        </Border>

        <!-- DOCK (VS-like „kompas“ z ToggleButtonů) -->
        <TextBlock Grid.Row="4" Text="Dock" FontWeight="SemiBold" Margin="0,0,0,6"/>

        <!-- Kompas -->
        <Grid Grid.Row="6" Width="140" Height="140">
            <Border Background="{DynamicResource FieldBackgroundBrush}" BorderBrush="#666" BorderThickness="1" CornerRadius="6"/>
            <Border Margin="24" Background="#22000000" CornerRadius="2"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Top -->
                <ToggleButton x:Name="DockTop" Grid.Row="0" Grid.Column="1" Margin="2"
                              ToolTip="Dock Top" Click="DockToggle_Click">
                    <Border Width="48" Height="22" Background="#44FFFFFF" BorderBrush="#88FFFFFF" BorderThickness="1" CornerRadius="2"/>
                </ToggleButton>

                <!-- Bottom -->
                <ToggleButton x:Name="DockBottom" Grid.Row="2" Grid.Column="1" Margin="2"
                              ToolTip="Dock Bottom" Click="DockToggle_Click">
                    <Border Width="48" Height="22" Background="#44FFFFFF" BorderBrush="#88FFFFFF" BorderThickness="1" CornerRadius="2"/>
                </ToggleButton>

                <!-- Left -->
                <ToggleButton x:Name="DockLeft" Grid.Row="1" Grid.Column="0" Margin="2"
                              ToolTip="Dock Left" Click="DockToggle_Click">
                    <Border Width="22" Height="48" Background="#44FFFFFF" BorderBrush="#88FFFFFF" BorderThickness="1" CornerRadius="2"/>
                </ToggleButton>

                <!-- Right -->
                <ToggleButton x:Name="DockRight" Grid.Row="1" Grid.Column="2" Margin="2"
                              ToolTip="Dock Right" Click="DockToggle_Click">
                    <Border Width="22" Height="48" Background="#44FFFFFF" BorderBrush="#88FFFFFF" BorderThickness="1" CornerRadius="2"/>
                </ToggleButton>

                <!-- Fill -->
                <ToggleButton x:Name="DockFill" Grid.Row="1" Grid.Column="1" Margin="2"
                              ToolTip="Dock Fill" Click="DockToggle_Click">
                    <Border Width="48" Height="48" Background="#44FFFFFF" BorderBrush="#88FFFFFF" BorderThickness="1" CornerRadius="2"/>
                </ToggleButton>
            </Grid>
        </Grid>

        <!-- None -->
        <ToggleButton x:Name="DockNone" Grid.Row="8" Content="None" Width="70" HorizontalAlignment="Center"
                      Click="DockToggle_Click" />
    </Grid>
</UserControl>
