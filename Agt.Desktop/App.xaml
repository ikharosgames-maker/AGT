<Application x:Class="Agt.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:Agt.Desktop.Services"
             xmlns:conv="clr-namespace:Agt.Desktop.Converters">
    <Application.Resources>

        <!-- Služby -->
        <services:SelectionService x:Key="SelectionService"/>
        <services:FieldCatalogService x:Key="FieldCatalog"/>
        <services:FieldFactory x:Key="FieldFactory"/>

        <!-- Konvertory -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Theme (Canvas/mřížka) -->
        <SolidColorBrush x:Key="CanvasBackgroundBrush" Color="#202020"/>
        <SolidColorBrush x:Key="FieldBackgroundBrush"  Color="#2E2E2E"/>
        <SolidColorBrush x:Key="ControlTextBrush"      Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridDotBrush"          Color="#40FFFFFF"/>

        <!-- Menu – systémové barvy -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Listy: čitelný text -->
        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Foreground" Value="{DynamicResource ControlTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource FieldBackgroundBrush}"/>
        </Style>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="Foreground" Value="{DynamicResource ControlTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource FieldBackgroundBrush}"/>
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Foreground" Value="{DynamicResource ControlTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Foreground" Value="{DynamicResource ControlTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
