<Application x:Class="Agt.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:Agt.Desktop.Services"
             xmlns:conv="clr-namespace:Agt.Desktop.Converters">
    <Application.Resources>

        <!-- Služby -->
        <services:SelectionService x:Key="SelectionService"/>
        <services:FieldCatalogService x:Key="FieldCatalog"/>
        <services:FieldFactory x:Key="FieldFactory"/>

        <!-- Konvertory -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:AutoContrastForegroundConverter x:Key="AutoContrast"/>

        <!-- Theme (barvy se dosadí v App.xaml.cs) -->
        <SolidColorBrush x:Key="CanvasBackgroundBrush" Color="#202020"/>
        <SolidColorBrush x:Key="FieldBackgroundBrush"  Color="#2E2E2E"/>
        <SolidColorBrush x:Key="ControlTextBrush"      Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridDotBrush"          Color="#40FFFFFF"/>
        <SolidColorBrush x:Key="MenuBackgroundBrush"   Color="#2A2A2A"/>
        <SolidColorBrush x:Key="MenuTextBrush"         Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MenuHoverBrush"        Color="#404040"/>

        <!-- Menu / MenuItem styly přebarvitelné motivem -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource MenuBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource MenuTextBrush}"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource MenuTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource MenuBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
